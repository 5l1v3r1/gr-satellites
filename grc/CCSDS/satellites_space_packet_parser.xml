<?xml version="1.0"?>
<block>
  <name>space_packet_parser</name>
  <key>satellites_space_packet_parser</key>
  <category>[Satellites]/CCSDS</category>
  <import>import satellites</import>
  <make>satellites.space_packet_parser($time_header, $time_format, $ascii_dec_num, $add_z_terminator)</make>
  <param>
    <name>Time Header</name>
    <key>time_header</key>
    <value>drop_down</value>
    <type>enum</type>
    <option>
	<name>Yes</name>
	<key>0</key>
    </option>
    <option>
	<name>No</name>
	<key>1</key>
    </option>
  </param>
  <param>
    <name>Time Format</name>
    <key>time_format</key>
    <value>drop_down</value>
    <type>enum</type>
    <hide>#if $time_header() == '1' then 'all' else 'none' </hide>
    <option>
	<name>CUC</name>
	<key>0</key>
    </option>
    <option>
	<name>CDS</name>
	<key>1</key>
    </option>
    <option>
	<name>CCS</name>
	<key>2</key>
    </option>
    <option>
	<name>ASCII A</name>
	<key>3</key>
    </option>
    <option>
	<name>ASCII B</name>
	<key>4</key>
    </option>
  </param>   
  <param>
    <name>Number of decimals</name>
    <key>ascii_dec_num</key>
    <value>1</value>
    <hide>
    #if $time_header() == '0'
	#if $time_format() &gt; '2'
		none
	#else
		all
	#end if
#else
	all
#end if	
     </hide>
  </param>
    <param>
    <name>Add Z terminator</name>
    <key>add_z_terminator</key>
    <value>drop_down</value>
    <type>enum</type>
    <hide>
#if $time_format() &gt; '2'
	none
#else
	all
#end if	
    </hide>
    <option>
	<name>Yes</name>
	<key>1</key>
    </option>
    <option>
	<name>No</name>
	<key>0</key>
    </option>
  </param>
  <sink>
    <name>in</name>
    <type>message</type>
  </sink>
</block>
