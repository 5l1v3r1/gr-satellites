<?xml version="1.0"?>
<block>
  <name>space_packet_time_stamp_adder</name>
  <key>satellites_space_packet_time_stamp_adder</key>
  <category>[Satellites]/CCSDS</category>
  <import>import satellites</import>
  <make>satellites.space_packet_time_stamp_adder($input_manual_automatic, $year, $month, $day, $hour, $minute, $second)</make>
  <param>
    <name>Manual or Automatic Time</name>
    <key>manual_automatic</key>
    <value>drop_down</value>
    <type>enum</type>
    <option>
	<name>Manual</name>
	<key>0</key>
    </option>
    <option>
	<name>Automatic</name>
	<key>1</key>
    </option>
  </param>
  <param>
    <name>Time Format</name>
    <key>time_format</key>
    <value>drop_down</value>
    <type>enum</type>
    <option>
	<name>CUC</name>
	<key>0</key>
    </option>
    <option>
	<name>CDS</name>
	<key>1</key>
    </option>
    <option>
	<name>CCS</name>
	<key>2</key>
    </option>
    <option>
	<name>ASCII A</name>
	<key>3</key>
    </option>
    <option>
	<name>ASCII B</name>
	<key>4</key>
    </option>
  </param>
  <param>
    <name>PField presence</name>
    <key>pfield</key>
    <value>drop_down</value>
    <type>enum</type>
    <hide>#if $time_format() &gt; '2' then 'all' else 'none'</hide>
    <option>
	<name>Yes</name>
	<key>0</key>
    </option>
    <option>
	<name>No</name>
	<key>1</key>
    </option>
  </param>
  <param>
    <name>PField Extension</name>
    <key>pfield_extension</key>
    <value>drop_down</value>
    <type>enum</type>
    <hide>
#if $time_format() == '0'
	#if $pfield() == '0'
		none
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
    <option>
	<name>Yes</name>
	<key>1</key>
    </option>
    <option>
	<name>No</name>
	<key>0</key>
    </option>
  </param>
  <param>
    <name>Time Code Identification</name>
    <key>time_code_identification_cuc</key>
    <value>drop_down</value>
    <type>enum</type>
    <hide>
#if $time_format() == '0'
	#if $pfield() == '0'
		none
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
    <option>
	<name>Level 1</name>
	<key>1</key>
    </option>
    <option>
	<name>Level 2</name>
	<key>2</key>
    </option>
  </param>
  <param>
    <name>Basic Time Number of Octets</name>
    <key>basic_time_num_octets_cuc</key>
    <value>0</value>
    <type>raw</type>
    <hide>
#if $time_format() == '0'
	#if $pfield() == '0'
		none
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
  </param>
  <param>
    <name>Fractional Time Number of Octets</name>
    <key>fractional_time_num_octets_cuc</key>
    <value>0</value>
    <type>raw</type>
    <hide>
#if $time_format() == '0'
	#if $pfield() == '0'
		none
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
  </param>
  <param>
    <name>PField Extension extended</name>
    <key>pfield_extension_extended</key>
    <value>drop_down</value>
    <type>enum</type>
    <hide>
#if $time_format() == '0'
	#if $pfield() == '0'
		#if $pfield_extension() == '1'
			none
		#else
			all
		#end if
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
    <option>
	<name>Yes</name>
	<key>1</key>
    </option>
    <option>
	<name>No</name>
	<key>0</key>
    </option>
  </param>
  <param>
    <name>Additional Octets of Basic Time</name>
    <key>additional_octets_basic_time_cuc</key>
    <value>0</value>
    <type>raw</type>
    <hide>
#if $time_format() == '0'
	#if $pfield() == '0'
		#if $pfield_extension() == '1'
			none
		#else
			all
		#end if
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
  </param>
  <param>
    <name>Additional Octets of Fractional Time</name>
    <key>additional_octets_fracational_time_cuc</key>
    <value>0</value>
    <type>raw</type>
    <hide>
#if $time_format() == '0'
	#if $pfield() == '0'
		#if $pfield_extension() == '1'
			none
		#else
			all
		#end if
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
  </param>
  <param>
    <name>Reserved for Mission Definition</name>
    <key>rsvd_cuc</key>
    <value>0</value>
    <type>raw</type>
    <hide>
#if $time_format() == '0'
	#if $pfield() == '0'
		#if $pfield_extension() == '1'
			none
		#else
			all
		#end if
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
  </param>
  <param>
    <name>Time Code Identification</name>
    <key>time_code_identification_cds</key>
    <value>4</value>
    <type>raw</type>
    <hide>all</hide>
  </param>
  <param>
    <name>Epoch Identification</name>
    <key>epoch_identification_cds</key>
    <value>drop_down</value>
    <type>enum</type>
    <hide>
#if $time_format() == '1'
	#if $pfield() == '0'
		none
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
    <option>
	<name>Level 1</name>
	<key>0</key>
    </option>
    <option>
	<name>Level 2</name>
	<key>1</key>
    </option>
  </param>
  <param>
    <name>Length of Day Segment</name>
    <key>length_of_day_cds</key>
        <value>drop_down</value>
    <type>enum</type>
    <hide>
#if $time_format() == '1'
	#if $pfield() == '0'
		none
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
    <option>
	<name>16-bit day segment</name>
	<key>0</key>
    </option>
    <option>
	<name>24-bit day segments</name>
	<key>1</key>
    </option>
  </param>
  <param>
    <name>Length of Submillisecond Segment</name>
    <key>length_of_submillisecond_cds</key>
    <value>drop_down</value>
    <type>enum</type>
    <hide>
#if $time_format() == '1'
	#if $pfield() == '0'
		none
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
    <option>
	<name>Millisecond</name>
	<key>0</key>
    </option>
    <option>
	<name>Microsecond</name>
	<key>1</key>
    </option>
  <option>
	<name>Picosecond</name>
	<key>2</key>
    </option>
  </param>
  <param>
    <name>Time Code Identification</name>
    <key>time_code_identification_ccs</key>
    <value>5</value>
    <type>raw</type>
    <hide>all</hide>
  </param>
  <param>
    <name>Calendar Variation</name>
    <key>calendar_variation_ccs</key>
    <value>drop_down</value>
    <type>enum</type>
    <hide>
#if $time_format() == '2'
	#if $pfield() == '0'
		none
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
    <option>
	<name>Month of year/day of month</name>
	<key>0</key>
    </option>
    <option>
	<name>Day of year</name>
	<key>1</key>
    </option>
  </param>
  <param>
    <name>Number of subsecond segments</name>
    <key>number_of_subsecond_ccs</key>
    <value>drop_down</value>
    <type>enum</type>
    <hide>
#if $time_format() == '2'
	#if $pfield() == '0'
		none
	#else
		all
	#end if
#else
	all
#end if	
    </hide>
   <option>
	<name>1 s</name>
	<key>0</key>
    </option>
   <option>
	<name>10^-2 s</name>
	<key>1</key>
    </option>
   <option>
	<name>10^-4 s</name>
	<key>2</key>
    </option>
   <option>
	<name>10^-6 s</name>
	<key>3</key>
    </option>
   <option>
	<name>10^-8 s</name>
	<key>4</key>
    </option>
   <option>
	<name>10^-10 s</name>
	<key>5</key>
    </option>
   <option>
	<name>10^-12 s</name>
	<key>6</key>
    </option>
  </param>
  <param>
    <name>Year</name>
    <key>year</key>
    <value>0</value>
    <type>raw</type>
    <hide>#if $manual_automatic() == '0' then 'none' else 'all'</hide>
  </param>
  <param>
    <name>Month</name>
    <key>month</key>
    <value>0</value>
    <type>raw</type>
    <hide>#if $manual_automatic() == '0' then 'none' else 'all'</hide>
  </param>
  <param>
    <name>Day</name>
    <key>day</key>
    <value>0</value>
    <type>raw</type>
    <hide>#if $manual_automatic() == '0' then 'none' else 'all'</hide>
  </param>
  <param>
    <name>Hour</name>
    <key>hour</key>
    <value>0</value>
    <type>raw</type>
    <hide>#if $manual_automatic() == '0' then 'none' else 'all'</hide>
  </param>
  <param>
    <name>Minute</name>
    <key>minute</key>
    <value>0</value>
    <type>raw</type>
    <hide>#if $manual_automatic() == '0' then 'none' else 'all'</hide>
  </param>
  <param>
    <name>Second</name>
    <key>second</key>
    <value>0</value>
    <type>raw</type>
    <hide>#if $manual_automatic() == '0' then 'none' else 'all'</hide>
  </param>
  <sink>
    <name>in</name>
    <type>message</type>
  </sink>
  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
