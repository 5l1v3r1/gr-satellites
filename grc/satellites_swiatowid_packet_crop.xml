<?xml version="1.0"?>
<block>
  <name>Swiatowid packet crop</name>
  <key>satellites_swiatowid_packet_crop</key>
  <category>[Satellites]/Packet</category>
  <import>import satellites</import>
  <make>satellites.swiatowid_packet_crop($drop_length)</make>
  <param>
    <name>Remove length field</name>
    <key>drop_length</key>
    <type>bool</type>
    <option>
      <name>Yes</name>
      <key>True</key>
    </option>
    <option>
      <name>No</name>
      <key>False</key>
    </option>
  </param>
  
  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <source>
    <name>out</name>
    <type>message</type>
  </source>
</block>
